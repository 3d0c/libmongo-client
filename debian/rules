#!/usr/bin/make -f
# -*- makefile -*-

export DH_OPTIONS += -O-Bbuild-tree --dbg-package=libmongo-client0-dbg

override_dh_auto_configure:
	dh_testdir
	./autogen.sh
	dh_auto_configure -- --enable-shared

override_dh_auto_clean:
	dh_testdir
	dh_auto_clean
	find . -name 'Makefile.in' | xargs rm -f
	rm -rf aclocal.m4 config.guess config.sub config.h.in configure \
	       depcomp install-sh ltmain.sh m4 missing

override_dh_makeshlibs:
	dh_makeshlibs -V

override_dh_installdocs:
	dh_installdocs --link-doc=libmongo-client0

%:
	dh $@
